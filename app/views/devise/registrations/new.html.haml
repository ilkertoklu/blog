:css
  html,
  body {
    height: 100%;
  }

  .form-signin .form-floating:focus-within {
    z-index: 2;
  }

  .form-signin input[type="email"] {
    margin-bottom: -1px;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
  }

  .form-signin input[type="password"] {
    margin-bottom: 10px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }

  body {
    display: flex;
    padding-top: 40px;
    padding-bottom: 40px;
  }
.form-signin.w-100.m-auto
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    %h1.h3.mb-3.fw-normal.text-center Please Sign up
    .form-floating
      = f.email_field :email, id: 'floatingInput', class: "form-control", placeholder: "Email"
      = f.label :email, for: "floatingInput"
    .form-floating
      = f.password_field :password, id: 'floatingInput', class: "form-control", placeholder: "Password"
      = f.label :password, for: 'floatingInput'
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      %br/
    .form-floating
      = f.password_field :password_confirmation, class: "form-control", id: 'floatingInput', placeholder: "Confirm Password"
      = f.label :password_confirmation, for: "floatingInput"
    .actions
      = f.submit "Sign up", class: "w-100 btn btn-lg btn-primary"
  = render "devise/shared/links"
