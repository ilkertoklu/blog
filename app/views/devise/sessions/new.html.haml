:css
  html,
  body {
    height: 100%;
  }

  .form-signin .form-floating:focus-within {
    z-index: 2;
  }

  .form-signin input[type="email"] {
    margin-bottom: -1px;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
  }

  .form-signin input[type="password"] {
    margin-bottom: 10px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }

  body {
    display: flex;
    padding-top: 40px;
    padding-bottom: 40px;
  }
.form-signin.w-100.m-auto
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    %form
      %h1.h3.mb-3.fw-normal.text-center Please Log in
      .form-floating
        = f.email_field :email, type: "email", class: "form-control", placeholder: "Email"
        = f.label :email, for: "floatingInput"
      .form-floating
        = f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password"
        = f.label :password
      - if devise_mapping.rememberable?
        .checkbox.mb-3
          = f.check_box :remember_me
          = f.label :remember_me
      .actions
        = f.submit "Log in", class: "w-100 btn btn-lg btn-primary"
  = render "devise/shared/links"
