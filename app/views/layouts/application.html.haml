!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    = favicon_link_tag asset_path('emoji.ico')
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_include_tag "application"
  %body
    - if user_signed_in?
      %nav.navbar.navbar-expand.navbar-dark.bg-dark
        .container-fluid
             
          %a
            = link_to 'Blog', articles_path, method: :get, class: "navbar-brand"
          %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarSupportedContent", "data-bs-toggle" => "collapse", :type => "button"}
            %span.navbar-toggler-icon
          #navbarSupportedContent.collapse.navbar-collapse
            %ul.navbar-nav.me-auto.mb-2.mb-lg-0
              %li.nav-item
                = link_to 'Profile', users_profile_path, method: :get, class: "nav-link active"
              - if (current_user&.has_role? :Admin) || (current_user&.has_role? :Moderator)
                %li.nav-item
                  %a= link_to 'Users', users_path, method: :get, class: "nav-link active"
              %li.nav-item
                %a= link_to 'Settings', edit_user_registration_path, method: :get, class: "nav-link active"
              %li.nav-item
                %a= link_to "Sign out", destroy_user_session_path, method: "delete", class: "nav-link active"
            .d-flex
              %span.navbar-text
                %p
                  Welcome #{current_user.roles_name[0]}! #{current_user.email}
  = yield
