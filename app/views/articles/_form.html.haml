= form_with model: article do |form|
  .form-signin.w-100.m-auto
    .mb-3
      = form.label :title, for: 'floatingInput', placeholder: 'Title'
      %br/
      = form.text_field :title, class: "form-control", id: "floatingInput"
      - article.errors.full_messages_for(:title).each do |message|
        %div= message
    %div
      = form.label :body, for: 'floatingInput'
      %br/
      = form.text_area :body, rows: "3", class: "form-control", id: "floatingInput"
      %br/
      - article.errors.full_messages_for(:body).each do |message|
        %div= message
    %div
      = form.label :status
      %br/
      = form.select :status, ['public', 'private', 'archived'], selected: 'public'
    = form.submit class: "w-100 btn btn-lg btn-primary"
